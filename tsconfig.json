{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "public",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@selectors/*": ["./selectors/*"],
      "@services/*": ["./services/*"],
      "@routes/*": ["./routes/*"],
      "@utils/*": ["./utils/*"]
    }
  }
}